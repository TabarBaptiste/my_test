{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}
{% block body %}
<div class="container">
    <h1>Liste des articles</h1>
    <div class="row">
        {% for article in articles %}
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{ article.title }}</h2>
                    <p class="card-text">{{ article.description }}</p>
                    <p class="card-text">{{ article.dateCreated|date('d/m/Y') }}</p>
                    <p class="btn btn-primary"><a href="{{ path('app_product_show', {'id': article.id}) }}">DÃ©tails du article</a></p>
                    <p class="card-text">{{ article.categorie}}</p>
                </div>
            </div>
        </div>

        {% endfor %}
    </div>
</div>
{% endblock %}