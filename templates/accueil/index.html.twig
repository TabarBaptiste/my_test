{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}
{% block body %}
<div class="container">
    <h1>Listes</h1>
    <h2>Liste des produits</h2>
    <div class="row">
        {% for produit in produits %}
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{ produit.title }}</h2>
                    <p class="card-text">{{ produit.description }}</p>
                    <p class="card-text">{{ produit.dateCreated|date('d/m/Y') }}</p>
                    <a href="{{ path('app_product_show', {'id': produit.id}) }}"><p class="btn btn-primary">Détails du produit</p></a>
                    <a href="{{ path('app_product_edit', {'id': produit.id}) }}"><p class="btn btn-success">Éditer le produit</p></a>
                    {# {% include "produits/delete.html.twig" %} #}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <h2>Liste des derniers articles</h2>
    <div class="row">
        {% for article in articles %}
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{ article.title }}</h2>
                    <p class="card-text">{{ article.description }}</p>
                    <p class="card-text">{{ article.dateCreated|date('d/m/Y') }}</p>
                    <p class="btn btn-primary"><a href="{{ path('app_product_show', {'id': article.id}) }}">Détails du article</a></p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}